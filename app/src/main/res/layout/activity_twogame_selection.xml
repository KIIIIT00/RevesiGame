<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TwogameSelection">

    <Button
        android:id="@+id/MoveVS"
        android:layout_width="177dp"
        android:layout_height="45dp"
        android:onClick="onClickTwoVS"
        android:text="対戦へ"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.912" />

    <RadioGroup
        android:id="@+id/PlayerOneSelection"
        android:layout_width="234dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.245">

        <RadioButton
            android:id="@+id/PlayerOneFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="先行"
            android:textAlignment="textStart"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/PlayerOneLater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="後攻"
            android:textSize="24sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/playerTwoForL"
        android:layout_width="246dp"
        android:layout_height="71dp"
        android:text="選択されていません"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765" />

    <EditText
        android:id="@+id/UserPlayerOneName"
        android:layout_width="249dp"
        android:layout_height="110dp"
        android:ems="10"
        android:hint="プレイヤー1の名前を入力してください"
        android:inputType="textMultiLine|textPersonName"
        android:text="Player1"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <EditText
        android:id="@+id/UserPlayerTwoName"
        android:layout_width="249dp"
        android:layout_height="110dp"
        android:ems="10"
        android:hint="プレイヤー2の名前を入力してください"
        android:inputType="textMultiLine|textPersonName"
        android:text="Player2"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603" />

</androidx.constraintlayout.widget.ConstraintLayout>